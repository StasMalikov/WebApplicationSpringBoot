<html lang="ru">

<head>
    <meta charset="utf-8">
    <title>Testing...</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
<div class='container-fluid'>
    <div>
        <form action="/logout" method="post">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}">
            <input type="submit" value="Sign Out"/>
        </form>
    </div>
    <h2>Список пользователей</h2>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Имя</th>
            <th scope="col">Фамилия</th>
            <th scope="col">Логин</th>
            <th scope="col">Пароль</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <form method="post" action="/add_user">
                <input type="hidden" name="_csrf" value="{{_csrf.token}}">
                <th></th>
                <td> <input type="text" name="name"  placeholder="Имя" ></td>
                <td><input type="text" name="last_name"  placeholder="Фамилия"></td>
                <td><input type="text" name="username"  placeholder="Логин"></td>
                <td><input type="password" name="password"  placeholder="Пароль"></td>
                <td><button type="submit" name = "submit">Добавить</button></td>
            </form>
        </tr>

        {{#users}}
        <tr>
            <form method="post" action="/edit">
                <input type="hidden" name="_csrf" value="{{_csrf.token}}">
                <th><input type="text" name="id"  placeholder="id" value="{{id}}" readonly></th>
                <td><input type="text" name="name"  placeholder="Имя" value="{{#name}}{{name}}{{/name}}"></td>
                <td><input type="text" name="last_name"  placeholder="Фамилия" value="{{#last_name}} {{last_name}} {{/last_name}}"></td>
                <td><input type="text" name="username"  placeholder="Логин" value="{{username}}"></td>
                <td><input type="password" name="password"  placeholder="Пароль" value="{{password}}"></td>
                <td><input type="submit" name = "submit" value="Удалить">
                    <input type="submit" name = "submit" value="Изменить"></td>
            </form>
        </tr>
        {{/users}}
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>

</html>